{
  "name": "betbuzz",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch server.ts --ext ts --exec esr server.ts",
    "build": "next build",
    "start-server": "NODE_ENV=production node .next/standalone/server.js",
    "lint": "next lint",
    "start-bet-job": "tsx scripts/runBetMatchingJob.ts",
    "start:all": "concurrently -k -s first -n SERVER,JOB -c green,blue \"npm run start-server\" \"npm run start-bet-job\""
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.6.0",
    "ioredis": "^5.6.1",
    "jotai": "^2.12.5",
    "next": "15.1.8",
    "next-auth": "^4.24.11",
    "node-cron": "^4.0.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-toastify": "^11.0.5",
    "recharts": "^2.15.3",
    "recoil": "^0.7.7",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.4.1",
    "postcss": "^8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20.19.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.5",
    "esbuild-runner": "^2.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.1.8",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}
